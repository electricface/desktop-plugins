#!/usr/bin/python

lang = ["zh_CN", "zh_TW"]

name = 'weather'

import os
import glob

for l in lang:
    os.system("mkdir -p locale/po/%s" % l)
    os.system("touch locale/po/%s/%s.po" % (l, name))

    cmd= "xgettext --from-code=utf-8 -L python -j -o locale/po/%s/%s.po %s" % (l,
            name, " ".join(glob.glob("*.coffee")))
    os.system(cmd)
